{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "target": "es2020",
        "sourceMap": true,
        "outDir": "build",
        "strict": true,
        "noImplicitAny": true,
        "rootDir": "src",
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}